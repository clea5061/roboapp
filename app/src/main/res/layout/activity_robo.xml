<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoboActivity">
    <TableRow android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="1">
    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:rowCount="3"
        android:layout_gravity="center_horizontal"
        >
        <ImageView android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="1"
            />
        <ImageView android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="3"
            android:layout_row="1"
            />
        <ImageView android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="0"
            android:layout_row="1"
            />
        <ImageView android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_column="1"
            android:layout_row="2"
            />
    </GridLayout>
    </TableRow>

</LinearLayout>